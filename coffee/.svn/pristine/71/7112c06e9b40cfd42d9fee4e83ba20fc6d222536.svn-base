<!-- login Section -->
<section id="login">
<div class="login-page">
    <div class="container">
        <div class="row">
        <div class="col-md-6 center" >
                <h1>Login to our site</h1>
                <p>Use the form below to login to our website if you have an account.</p>
                <br>
                <br>
                <h1>Let's Start </h1>
                 <a href="${path}/member/login.do" class="btn btn-lg btn-outline-light" role="button">로그인</a>
         </div>
 
         <div class="col-md-6 col-sm-offset-3 login-box wow fadeInUp">
 
                <div class="l-form-top">
                    <div class="l-form-top-left">
                        <h3>REGISTER FORM</h3>
                        <p>회원가입 페이지 입니다.</p>
                    </div>
                </div>
                <div class="l-form-bottom">
                    <form role="form" name="form1">
                        <div class="form-group">
                            <label class="sr-only" for="l-form-username">아이디</label>
                            <input type="text" name="userid" placeholder="아이디를 입력해주세요." class="l-form-username form-control" id="userid">
                            <span id="result"></span>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="l-form-password">비밀번호</label>
                            <input type="password" name="password" placeholder="비밀번호를 입력해주세요." class="l-form-password form-control" id="password">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="l-form-useralias">이름</label>
                            <input type="text" name="username" placeholder="이름을 입력해주세요." class="l-form-username form-control" id="username">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="l-form-email">이메일</label>
                            <input type="email" name="email" placeholder="이메일을 입력해주세요." class="l-form-email form-control" id="email">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="l-form-phone">휴대번호</label>
                            <input type="text" name="phone" placeholder="휴대번호을 입력해주세요." class="l-form-phone form-control" id="phone">
                        </div>
                        <button type="submit" class="btn btn-default" id="btnRegister">회원가입</button>
                        
                    </form>
                </div>
 
            </div>
        </div>
        
    </div>
 </div>
</section>

